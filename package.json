{
  "name": "personal-cv",
  "version": "1.0.0",
  "source": "src/index.html",
  "description": "My personal CV project",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "main": "index.js",
  "homepage": "https://ereyzer.github.io/personal-cv/",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "clear": "rm -rf .parcel-cache",
    "start": "npm run clear; parcel --open",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md, scss, html}\"",
    "lint": "eslint --cache --fix --color",
    "lint:css": "stylelint --fix '**/*.scss' --ignore-path .stylelintignore",
    "build": "parcel build src/index.html --public-url /personal-cv/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "npm run format",
      "npm run lint:css",
      "npm run lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ereyzer/personal-cv.git"
  },
  "author": "Ivan Laver",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ereyzer/personal-cv/issues"
  },
  "homepage": "https://github.com/Ereyzer/personal-cv#readme",
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.27.0",
    "@html-eslint/parser": "^0.27.0",
    "@parcel/transformer-sass": "^2.12.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "parcel": "^2.12.0",
    "posthtml": "^0.16.6",
    "posthtml-doctype": "^1.1.1",
    "posthtml-include": "^2.0.1",
    "prettier": "3.3.3",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0"
  },
  "dependencies": {
    "modern-normalize": "^3.0.1"
  }
}
